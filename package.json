{
  "name": "portfolio-cyberpunk",
  "version": "1.0.0",
  "description": "Portfólio pessoal com temática cyberpunk para desenvolvedores front-end",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run build:css && npm run build:js",
    "build:css": "cleancss -o css/style.min.css css/style.css",
    "build:js": "uglifyjs js/main.js js/scrolltrigger-config.js -o js/bundle.min.js",
    "optimize-images": "imagemin assets/* --out-dir=assets/optimized",
    "lint:css": "stylelint css/style.css",
    "lint:js": "eslint js/*.js",
    "format": "prettier --write .",
    "serve": "http-server -p 8080 -o"
  },
  "keywords": [
    "portfolio",
    "cyberpunk",
    "frontend",
    "developer",
    "html5",
    "css3",
    "javascript",
    "bootstrap",
    "gsap",
    "animations"
  ],
  "author": "Seu Nome <seu.email@exemplo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/portfolio-cyberpunk.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/portfolio-cyberpunk/issues"
  },
  "homepage": "https://github.com/seu-usuario/portfolio-cyberpunk#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.40.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.1",
    "live-server": "^1.2.2",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.0",
    "uglify-js": "^3.17.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
} 